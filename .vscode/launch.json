    "version": "0.2.0",
    "configurations": [
        {
            "name": "NIAGADS API - dev",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "src.main:app", "--reload"
               //"--no-reload",
            ],
            "jinja": true,
            "justMyCode": true
        },
        {
            "name": "Initialize Cache",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "app:create_app(initCacheDB='all')",
                "FLASK_DEBUG": "1",
                "FLASK_ENV": "development"
            },
            "args": [
                "run",
                "--no-debugger",
                //"--no-reload",
            ],
            "jinja": true,
            "justMyCode": true
        },
        {
            "name": "NIAGADS API:gunicorn",
            "type": "python",
            "request": "launch",
            "program": "~/.local/bin/gunicorn",
            "gevent": true,
            "args": ["app:create_app(None)", "--bind=127.0.0.1:8000", "--reload", "--worker-class", "eventlet", "-w", "1", "--timeout=7200"],
            "postDebugTask": "killdebugger"
        }
    ]
}